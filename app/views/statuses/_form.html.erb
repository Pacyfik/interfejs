<%= form_for(@status) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2>Podano złe dane:</h2>

      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= f.label 'Twój opis filmu' %></b><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <b><%= f.label 'Obejrzany?' %></b><br />
    <%= f.check_box :seen %>
  </div>
  <div class="actions">
    <%= f.submit 'Dodaj film', :class => "form_submit" %>
  </div>
<% end %>
