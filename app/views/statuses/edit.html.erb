<p id="notice"><%= notice %></p>

<h1>Zmiana informacji o filmie</h1>

<%= form_for(@status) do |f| %>
  <% if @status.errors.any? %>
    <div id="error_explanation">
      <h2>Podano złe dane:</h2>

      <ul>
      <% @status.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Twój opis' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label 'Obejrzany?' %><br />
    <%= f.check_box :seen %>
  </div>
  <div class="field">
    <%= f.label 'Etykiety' %><br />
    <% @tags.each do |t| %>	
	  <%= check_box_tag "status[tag_ids][]", t.id, @status.tags.include?(t) %>
	  <%= f.label "status[tag_ids][]", t.name %>
	<% end %>
  </div>  
  <div class="actions">
    <%= f.submit 'Zapisz zmiany', :class => "form_submit" %>
  </div>
<% end %>

<%= link_to 'Wstecz', filmy_path %>
