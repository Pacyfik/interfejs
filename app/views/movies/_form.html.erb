<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2>Podano złe dane:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Tytuł' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'Rok' %><br />
    <%= f.text_field :year %>
  </div>  
  <div class="field">
    <%= f.label 'Kraj' %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label 'Gatunek' %><br />
    <%= f.text_field :genre %>
  </div>
  <div class="actions">
    <%= f.submit 'Dalej' %>
  </div>
<% end %>
