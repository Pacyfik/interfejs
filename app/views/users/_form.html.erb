<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Podano złe dane:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Login' %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label 'Adres e-mail' %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label 'Hasło' %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'Powtórz hasło' %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit 'Zarejestruj się', :class => "form_submit" %>
  </div>
<% end %>
