<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2>Podano złe dane:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nazwa' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Obrazek' %><br />
    <%= f.text_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit 'Stwórz etykietę', :class => "form_submit" %>
  </div>
<% end %>
