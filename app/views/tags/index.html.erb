<div class="lista_tabela">

<h1>Twoja lista etykiet</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th class="n_len">Nazwa <%= link_to '&darr;'.html_safe, etykiety_path(:order => "asc") %> <%= link_to '&uarr;'.html_safe, etykiety_path(:order => "desc") %></th>
    <th class="u_len">Pic</th>
    <th>Filmy</th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to truncate(tag.name , :length => 25), tag %></td>
    <td class="u_len"><%= tag.picture %></td>
    <td><% tag.statuses.each do |s| %>
    <% if tag.statuses.last == s %>
      <%= link_to s.movie.title, s %>
	<% else %>
	  <%= link_to s.movie.title, s %> |
    <% end %>
  <% end %></td>
    <td class="u_len"><%= link_to '', tag, method: :delete, data: { confirm: 'Jesteś pewien?' }, :class => "x"  %></td>
  </tr>
<% end %>
</table>

<h3><%= link_to 'Dodaj nową etykietę', etyk_nowa_path %></h3>

</div>
