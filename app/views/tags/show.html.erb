<div class="lista_tabela">

<h1>Szczegóły etykiety</h1>

<div class="szczegoly2">
<p id="notice"><%= notice %></p>

<p>
  <b>Nazwa:</b>
  <%= @tag.name %>
</p>

<p>
  <b>Obrazek:</b>
  <%= @tag.picture %>
</p>

<p>
  <b>Filmy z tą etykietą:</b>
  <% @tag.statuses.each do |s| %>
    <% if @tag.statuses.last == s %>
      <%= link_to s.movie.title, s %>
	<% else %>
	  <%= link_to s.movie.title, s %> |
    <% end %>
  <% end %>
</p>

</div>

<br>
<b>
<%= link_to 'Edycja', edit_tag_path(@tag) %> |
<%= link_to 'Wstecz', etykiety_path %>
</b>
<br><br>
</div>